{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whipr",
  "version": "0.2.2",
  "identifier": "com.whipr.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Whipr",
        "width": 1000,
        "height": 720,
        "minWidth": 360,
        "minHeight": 400,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; connect-src https://github.com https://objects.githubusercontent.com",
      "capabilities": ["main"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "createUpdaterArtifacts": true,
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "category": "Utility",
    "shortDescription": "Fast, private voice transcription",
    "longDescription": "Whipr is a desktop application for fast, local voice transcription. Press a hotkey, speak, and your words are transcribed and pasted directly into any application. All processing happens on your machine.",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "libasound2"
        ],
        "section": "sound"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/greenuni/whipr/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdFQkU2MzRDRUEwRjA1MEYKUldRUEJRL3FUR08rZm9TL0VOV2RUMUZpR2N2cXMxQ1JpV2VpNGNrdW5Hcy9sUjlPWWo1dzJsQ2YK"
    }
  }
}
